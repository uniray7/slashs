type User {
  id: ID! @unique
  name: String!
}

type DirectChannel {
  id: ID! @unique
  user1: User! @relation(name: "ChnannelUser1")
  user2: User! @relation(name: "ChnannelUser2")
  messages: [Message!]!
}

type Message {
  id: ID! @unique
  user: User!
  text: String!
  channel: DirectChannel!
  createdAt: DateTime!
}